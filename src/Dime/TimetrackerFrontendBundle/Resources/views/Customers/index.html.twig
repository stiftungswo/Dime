{% extends "DimeTimetrackerFrontendBundle::layout.html.twig" %}

{% block header %}
  <div class="pull-right">
    <button class="customer-new btn btn-primary btn-small">Add customer</button>
  </div>
  <h1>Customer</h1>
{% endblock %}

{% block content %}
<div id="customers" class="loading"></div>

<script type="text/template" id="tpl-customer-item">
<div class="buttons pull-right"><button class="edit btn">Edit</button> <button class="delete btn btn-danger">Delete</button></div>
<h3><%- name %> <% if (typeof(alias) != "undefined") { %>(Alias: <%- alias %>)<% } %></h3>
</script>

<div id="customer-form" class="modal hide" data-prefix="customer-">
    <div class="modal-header">
        <a href="#" class="close">Ã—</a>
        <h3 class="title">Add customer</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <fieldset>
                <div class="control-group">
                    <label for="customer-name" class="control-label">Name:</label>
                    <div class="controls">
                        <input id="customer-name" class="customer-name input-xlarge" type="text" value="" >
                    </div>
                </div>
                <div class="control-group">
                    <label for="customer-alias" class="control-label">Alias:</label>
                    <div class="controls">
                        <input id="customer-alias" class="customer-alias input-xlarge" type="text" value="" >
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <button class="save btn btn-primary span2">Save</button>
        <button class="cancel btn">Cancel</button>
    </div>
</div>

{% endblock %}

{% block js %}
<script type="text/javascript">
  (function ($, app) {
    var customers = new app.collection.customers();
    var form = new app.views.customer.form({el: '#customer-form', collection: customers});
    new app.views.customer.list({collection: customers, itemTagName: "div", form: form}).render();
    customers.fetch();

    $('.customer-new').bind('click', function(e) {
      e.preventDefault();
      form.model = new app.model.customer();
      form.render();
    });
  })(jQuery, Dime);
</script>
{% endblock %}
