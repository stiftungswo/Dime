<!DOCTYPE html>
<html ng-app>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>DimeERP</title>
    <base href="/">
    <!-- Add to homescreen for Chrome on Android -->
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="icon" sizes="192x192" href="images/touch/chrome-touch-icon-192x192.png">

    <!-- Add to homescreen for Safari on iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="Web Starter Kit">
    <link rel="apple-touch-icon-precomposed" href="apple-touch-icon-precomposed.png">

    <!-- Tile icon for Win8 (144x144 + tile color) -->
    <meta name="msapplication-TileImage" content="images/touch/ms-touch-icon-144x144-precomposed.png">
    <meta name="msapplication-TileColor" content="#3372DF">

    <!-- bootsrap CSS from AdminLTE -->
    <link href="{{ asset('bundles/dimefrontend/web/vendor/admin-lte/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet" type="text/css" />

    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    <!-- angular ui CSS -->
    {% if dime_release_mode == "true" %}
        <link rel="stylesheet" href="{{ asset('bundles/dimefrontend/build/web/packages/angular_ui/css/angular.css')}}">
    {% else %}
        <link rel="stylesheet" href="{{ asset('bundles/dimefrontend/web/packages/angular_ui/css/angular.css')}}">
    {% endif %}

    <!-- AdminLTE Styles -->
    <link href="{{ asset('bundles/dimefrontend/web/vendor/admin-lte/dist/css/AdminLTE.min.css')}}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/dimefrontend/web/vendor/admin-lte/dist/css/skins/skin-blue.min.css')}}" rel="stylesheet" type="text/css" />

    <!-- App CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/dimefrontend/web/styles/main.css?nocache=' ~ date().timestamp) }}">
</head>

<body ng-cloak class="skin-blue fixed sidebar-mini">
    <app></app>

    <!-- required scripts for AdminLTE -->
    <script src="{{ asset('bundles/dimefrontend/web/vendor/admin-lte/plugins/jQuery/jQuery-2.1.4.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/dimefrontend/web/vendor/admin-lte/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/dimefrontend/web/vendor/admin-lte/dist/js/app.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/dimefrontend/web/vendor/admin-lte/plugins/slimScroll/jquery.slimscroll.min.js') }}" type="text/javascript"></script>

    <!-- required scripts for DimeERP -->
    {% if dime_release_mode == "true" %}
        <!-- Serving PROD files from build folder (JS) -->
        <script type="text/javascript" src="{{ asset('bundles/dimefrontend/build/web/main.dart.js?nocache=' ~ date().timestamp) }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dimefrontend/build/web/packages/browser/dart.js?nocache=' ~ date().timestamp) }}"></script>
    {% else %}
        <!-- Serving DEV files (Dart) -->
        <script type="application/dart" src="{{ asset('bundles/dimefrontend/web/main.dart?nocache=' ~ date().timestamp) }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dimefrontend/web/packages/browser/dart.js?nocache=' ~ date().timestamp) }}"></script>
    {% endif %}
</body>
</html>
